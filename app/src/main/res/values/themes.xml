<resources xmlns:tools="http://schemas.android.com/tools" xmlns:tool="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.EthioStore" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- \<item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/base</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:statusBarColor" tool:targetApi="l" type="color" >#000000</item>
    </style>

    <style name="Theme.EthioStore" parent="Base.Theme.EthioStore" />

    <style name="Theme.EthioStore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EthioStore.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EthioStore.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    
    <style name="DalogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="Button" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#CD2D384A</item>

    </style>


</resources>