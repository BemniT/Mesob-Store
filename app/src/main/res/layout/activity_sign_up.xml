<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp_Activity"
    android:background="@drawable/body">


    <TextView
        android:id="@+id/letsStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Get Started!"
        android:textColor="@color/black"
        android:layout_below="@+id/app_logo"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account in Mesob Store"
        android:textColor="@color/black"
        android:layout_below="@+id/letsStart"
        android:textSize="10sp"
        android:layout_centerHorizontal="true"

        />

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />


    <EditText
        android:id="@+id/register_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bar"
        android:layout_below="@id/letsStart"
        android:layout_centerVertical="true"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="35dp"
        android:hint="Full Name"
        android:textColorHint="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/letsStart"
        android:layout_marginTop="44.5dp"
        android:layout_marginRight="-100dp"
        android:layout_toLeftOf="@+id/register_username"
        android:background="@drawable/email" />



    <EditText
        android:id="@+id/register_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bar"
        android:layout_below="@id/register_username"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="35dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="35dp"
        android:hint="Phone Number"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/register_username"
        android:layout_marginTop="14.5dp"
        android:layout_marginRight="-100dp"
        android:layout_toLeftOf="@+id/register_phonenumber"
        android:background="@drawable/phone" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bar"
        android:layout_below="@id/register_phonenumber"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="35dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="35dp"
        android:hint="Password"
        android:textColorHint="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_phonenumber"
        android:layout_marginTop="15.5dp"
        android:layout_marginRight="-100dp"
        android:layout_toLeftOf="@+id/register_phonenumber"
        android:background="@drawable/password" />

    <EditText
        android:id="@+id/register_Confirmpassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bar"
        android:layout_below="@id/register_password"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="35dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="35dp"
        android:hint="Confirm Password"
        android:textColorHint="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        />

    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/register_password"
        android:layout_marginTop="15.5dp"
        android:layout_marginRight="-100dp"
        android:layout_toLeftOf="@+id/register_phonenumber"
        android:background="@drawable/password" />

    <ImageButton
        android:id="@+id/register_btn"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/signup"
        android:layout_below="@+id/register_Confirmpassword"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="SignUp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have account?"
        android:layout_below="@+id/register_btn"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login here"
        android:layout_below="@+id/register_btn"
        android:layout_marginLeft="240dp"
        android:textSize="17sp"
        android:textColor="@color/blue"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        />
</RelativeLayout>