<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="245dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/book_Image_vertical"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:scaleType="center"
            android:layout_marginTop="2dp"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/book_name_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/book_category_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action. Adventure"
            android:layout_marginLeft="10dp"
            android:textSize="8sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/book_rate_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.6"
            android:layout_marginLeft="10dp"
            android:textSize="8sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:id="@+id/book_size_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="games size"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="3dp"
            />
    </LinearLayout>





</LinearLayout>