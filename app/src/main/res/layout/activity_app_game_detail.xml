<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Software_Detail_Activity">

    <RelativeLayout
        android:id="@+id/relative_layout2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/blue"
        >
        <ImageView
            android:id="@+id/soft_backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="#94A9C3"

            />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/software_image_card"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="20dp"
        >

        <ImageView
            android:id="@+id/software_image"
            android:layout_width="130dp"
            android:layout_height="130dp"

            android:background="@color/white"

            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/software_image_card"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="35dp">

        <TextView
            android:id="@+id/software_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/software_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="10dp"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/relative_layout2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        >






    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/container1"
        android:layout_marginTop="15dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/container1"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            >
            <TextView
                android:id="@+id/software_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:textSize="13dp"
                android:text="4.5"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Rating"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@drawable/line"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/container1"
            >
            <TextView
                android:id="@+id/software_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:textSize="13dp"
                android:text="250"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Pages"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@drawable/line"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/container1"
            >
            <TextView
                android:id="@+id/software_numDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:textSize="13dp"
                android:text="24,512"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Likes"
                android:layout_gravity="center"
                />

        </LinearLayout>




    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/book_download_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/middle_container"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="17dp"
        >

        <Button
            android:id="@+id/software_download"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:background="@color/button"
            android:text="Install"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"


            />
</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/about_this_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About this game"
        android:layout_below="@+id/book_download_card"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/software_image_slider"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/about_this_game"
        android:layout_marginTop="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/software_image_slider"
        android:layout_marginTop="20dp"
        android:background="#4DD6D2D2"
        >

        <LinearLayout
            android:id="@id/lower_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_marginStart="20dp"
                android:id="@+id/software_descriptionBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Description"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/software_reviewBtn"
                android:layout_marginStart="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Review"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_marginStart="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Review"
                android:layout_gravity="center"
                />


        </LinearLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/lower_container"/>


        <TextView
            android:layout_marginStart="20dp"
            android:id="@+id/software_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Description"
            android:layout_gravity="center"
            android:layout_below="@id/line3"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            />

    </RelativeLayout>


</RelativeLayout>